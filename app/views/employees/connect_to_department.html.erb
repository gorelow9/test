<%= form_for @employee do |f| %>

  <%= f.label "First name" %>
	 <%= f.collection_select :department_id, Department.order(:name),:id,:name, include_blank: true %> <br>

	<%= f.label "Last name" %>
	<%= f.text_field :last_name, value: "#{@employee.FIO.split[1]}"  %> <br>

	<%= f.label "Third name" %>
	<%= f.text_field :third_name, value: "#{@employee.FIO.split[2]}"  %> <br>

  <%= f.submit "Submit employee" %>

<% end %>