<%= form_for Bound.new do |f| %>
	<%= f.hidden_field :employee_id, value: params[:employee] %>
	<%= f.label 'Start date' %>
	<%= f.date_field :start_date, as: :date, value: Date.today%><br>

  <%= f.label 'End date' %>
  <%= f.date_field :end_date, as: :date%><br>

  <%= f.label 'Department' %>
  <%= f.collection_select :department_id, Department.all, :id,:current_name, include_blank: true %> <br>

  <%= f.submit "Submit connection" %>

<% end %>